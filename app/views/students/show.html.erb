<div class="card-action">
  <h4>Student</h4>
</div>
<div class="row">
  <div class="col s6 m6">
    <div class="card blue lighten-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <p><%= @student.email %></p>
        <p>Course Enrollment: none</p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <% if @student == current_user %>
    <div class="col s6 m6">
      <%= link_to '<i class="material-icons left">person</i>Edit Profile'.html_safe, edit_student_path(@student), class: "blue lighten-1 btn" %>
    </div>
  <% end %>
</div>
<div class="card-action">
  <h4>Enrollments</h4>
</div>