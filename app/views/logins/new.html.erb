<h3 class='center-align'>Student Login</h3>

<div class="container">
  <div class="row center">
    <div class="col s12 m12 l12">
      <div class="row">
        <%= form_for :logins do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.email_field :email, placeholder: "Email", autofocus: true %>
              <%= f.label :email, "Email" %>
            </div>
          </div>
          <div class="row"> 
            <div class="input-field col s12"> 
              <%= f.password_field  :password, placeholder: "Enter password" %>
              <%= f.label :password, "Password" %>
            </div>
          </div>
          <div>
            <%= f.button  '<i class="material-icons left">arrow_forward</i>Log in'.html_safe, class: "btn blue lighten-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>